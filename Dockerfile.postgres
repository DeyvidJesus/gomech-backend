FROM postgres:16-alpine

# Configuracoes ajustadas para VPS de 1GB RAM
COPY docker/postgres/postgresql.conf /etc/postgresql/postgresql.conf

HEALTHCHECK --interval=30s --timeout=5s --retries=5 CMD pg_isready -U "$POSTGRES_USER" -d "$POSTGRES_DB" || exit 1

CMD ["postgres", "-c", "config_file=/etc/postgresql/postgresql.conf"]
